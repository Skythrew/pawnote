{
  "compilerOptions": {
    "noErrorTruncation": true,

    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",

    "esModuleInterop": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,

    "strict": true,
    "declaration": true,
    "emitDeclarationOnly": true,

    "rootDir": "src",
    "outDir": "dist",

    "jsx": "preserve",
    "jsxImportSource": "solid-js",

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"]
}