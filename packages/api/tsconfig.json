{
  "compilerOptions": {
    "noErrorTruncation": true,

    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",

    "esModuleInterop": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,

    "strict": true,
    "noEmit": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },

  "include": ["src"],
  "exclude": ["node_module/**", "dist/**"]
}