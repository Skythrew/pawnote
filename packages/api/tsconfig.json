{
  "compilerOptions": {
    "noErrorTruncation": true,

    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",

    "esModuleInterop": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,

    "strict": true,
    "noEmit": true,

    "baseUrl": "src",
    "paths": {
      "@/*": ["./*"]
    }
  },

  "include": ["src", ".eslintrc.cjs", "rollup.config.js", "vite.config.ts"],
  "exclude": ["node_modules/**", "dist/**"]
}