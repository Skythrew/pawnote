{
  // Indentation
  "editor.detectIndentation": false,
  "editor.insertSpaces": true,
  "editor.tabSize": 2,

  // ESLint configuration
  "eslint.packageManager": "pnpm",
  "eslint.workingDirectories": [
    "platforms/web",
    "packages/*"
  ],

  // Always disable prettier, we only use ESLint
  "prettier.enable": false,

  // Auto-format using ESLint on save.
  "editor.formatOnSave": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },

  // UnoCSS configuration
  "unocss.root": "platforms/web",

  // Emmet configuration for SolidJS
  "emmet.includeLanguages": {
    "typescriptreact": "html"
  },

  // cSpell configuration
  "cSpell.language": "en,fr",
  "cSpell.words": [
    "academie",
    "Academie",
    "appelfonction",
    "CASTJU",
    "Defaut",
    "derniere",
    "Dernieres",
    "eleve",
    "Eleve",
    "Etab",
    "Etablissements",
    "expir",
    "ielang",
    "numero",
    "Parametres",
    "pawnote",
    "pronote",
    "Pronote",
    "Securisation",
    "viescolaire"
  ]
}
