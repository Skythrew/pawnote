{
  "version": 2,
  "public": false,

  "github": {
    "enabled": false,
    "silent": true
  },

  "headers": [
    {
      "source": "/manifest.webmanifest",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/manifest+json"
        }
      ]
    },
		{
      "source": "/(.*)",
      "headers": [
        {
          "key": "x-frame-options",
          "value": "deny"
        },
				{
					"key": "x-xss-protection",
					"value": "1; mode=block"
				},
				{
					"key": "x-content-type-options",
					"value": "nosniff"
				},
				{
					"key": "content-security-policy",
					"value": "default-src 'self';"
				}
      ]
    }
  ]
}
