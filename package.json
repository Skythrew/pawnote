{
  "name": "pornote",
  "version": "0.1.1",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "release": "next lint --fix && release-it"
  },
  "dependencies": {
    "@fontsource/poppins": "^4.5.1",
    "@fontsource/roboto": "^4.5.1",
    "got": "^12.2.0",
    "haversine-distance": "^1.2.1",
    "ky": "^0.31.1",
    "localforage": "^1.10.0",
    "node-forge": "^1.3.0",
    "pako": "^2.0.4"
  },
  "devDependencies": {
    "@types/node-forge": "^1.0.1",
    "@types/pako": "^1.0.3",
    "eslint": "8",
    "release-it": "^14.14.2",
    "typescript": "4.4.4"
  },
  "license": "MIT",
  "release-it": {
    "hooks": {
      "before:init": [
        "pnpm run lint"
      ]
    },
    "git": {
      "commitMessage": "chore: release v${version}",
      "tagAnnotation": "Release v${version}",
      "tagName": "v${version}"
    },
    "github": {
      "release": false
    },
    "npm": {
      "publish": false
    }
  }
}
