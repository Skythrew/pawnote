{
  "name": "pornote-monorepo",
  "version": "0.0.0",
  "author": "Mikkel RINGAUD <mikkel@milescode.dev> (https://github.com/Vexcited)",
  "repository": "github:Vexcited/pornote",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "release": "release-it"
  },
  "release-it": {
    "plugins": {
      "@release-it-plugins/workspaces": {
        "skipChecks": true,
        "publish": false
      }
    },
    "hooks": {
      "before:init": [
        "pnpm --filter \"./packages/pornote\" run lint"
      ]
    },
    "git": {
      "commitMessage": "chore: release v${version}",
      "tagAnnotation": "Release v${version}",
      "tagName": "v${version}"
    },
    "github": {
      "draft": false,
      "release": true,
      "releaseName": "v${version}"
    },
    "npm": {
      "publish": false
    }
  },
  "devDependencies": {
    "@release-it-plugins/workspaces": "^3.2.0",
    "release-it": "^15.5.1"
  }
}